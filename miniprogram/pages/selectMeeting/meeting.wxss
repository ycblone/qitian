/* miniprogram/pages/selectMeeting/meeting.wxss */
page{
    background-color:#ecf3fa;
    min-height:100vh;
    height:auto
}
.selectMeetingWrap{

}
.timeBox{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    /*position: fixed;*/
    /*top: 0;*/
    background-color: white;
}
.isTime{
    justify-content: space-around;
}

.areaBox{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    background-color: white;
}
.start{
    line-height: 100%;
}
.picker{
    color: #ce4920;
}
.areaSelect{
    padding-left: 80rpx;
}
.areaText{
    height: 30rpx;
    line-height: 30rpx;
    background-color: darkgrey;
    color: white;
    text-align: center;
    padding: 10rpx 40rpx;
    margin-left: 10rpx;
    border-radius: 10rpx;
}
.scrollView{
    width: 100%;
}
.scrollContent{
    /*height: 100%;*/

}
.companyBlock{
    width: 90%;
    height: 200rpx;
    display: flex;
    background-color: white;
    border-radius: 8px;
    margin: 0 auto;
    padding: 20rpx;
    box-shadow:0px 10px 20px #C0C0C0;
    margin-top: 40rpx;
}
.imgLeft{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: auto 0;

}
.imgLeft image{
    width: 100%;
    height: 100%;
}
.sessionRight{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 10rpx 0;
}
.rightTitle{
    font-size: 18px;
    font-weight: bold;

}
.rightText{
    color: grey;
    font-size: 13px;
    display: flex;
    justify-content: space-between;
}
.rightBottom{
    color: grey;
    font-size: 13px;
}