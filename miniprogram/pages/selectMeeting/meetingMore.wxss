/* miniprogram/pages/selectMeeting/meetingMore.wxss */
.moreTop{
    display: flex;
    height: 300rpx;
    align-items: center;
    padding: 0 20rpx;
}
.imgLeft{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: auto 0;

}
.imgLeft image{
    width: 100%;
    height: 100%;
}
.sessionRight{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 10rpx 0;
}
.rightTitle{
    font-size: 16px;
    /*font-weight: bold;*/
    color: grey;

}
.rightText{
    /*font-weight: bold;*/
    color: grey;
    font-size: 16px;
    margin-top: 10rpx;
}
.rightBottom{
    color: grey;
    font-size: 13px;
    display: flex;
    justify-content: space-around;
    margin-top: 17rpx;
}
.blackFont{
    color: black;
    text-align: center;
}
.line{
    background-color: #ecf3fa;
    height: 20rpx;
}
.moreContent{
    padding: 40rpx 26rpx;
}
.contentTitle{
    height: 40rpx;
    display: flex;

}
.borderLeft{
    font-size: 0;
    border: solid #ce4920;
    border-width: .5rem 2px;
    color: #ce4920;
    border-radius: 10rpx;
    height: 1px;
    margin: auto 0;

}
.borderRight{
    font-weight: bold;
    font-size: 15px;
    margin-left: 10rpx;
}
.time{
    color: grey;
    padding: 20rpx;
}
.bottomButton{
    width: 90%;
    height: 88rpx;
    background-color: #ce4920;
    text-align: center;
    letter-spacing: 2px;
    color: white;
    line-height: 88rpx;
    position: fixed;
    bottom: 20rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    border-radius: 8px;

}