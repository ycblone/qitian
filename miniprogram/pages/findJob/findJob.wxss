/* miniprogram/pages/findJob/findJob.wxss */
.findJobWrap{

}
.topText{
    display: flex;
    height: 80rpx;
    align-items: center;

}
.leftText{
    flex-basis: 40%;
    font-size: 17px;
    letter-spacing: 2rpx;
    text-align: center;
    position: relative;

}
/*下划线*/
.leftText:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -14rpx;
    right: 0;
    height: 2px;
    width: 116px;
    background-color: black;
    margin: 0 auto;

}
.weui-cell_input image{
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    left: 50rpx;
}
.weui-cell_input{
    position: relative;
    flex: 60%;

}
.localIco{
    position: absolute;
    left: 16rpx;
    top: 16rpx;

}
.weui-input{
    height: 69rpx;
    background-color: #f6f6f6;
    border-radius: 19px;
    width: 77%;
    font-size:13px;
    padding-left: 64rpx;
}
.headBottom{
    display: flex;
    justify-content: space-around;
    height: 80rpx;
    align-items: center;
    border-bottom: 1px solid #F0F0F0;

}
/*滚动展示区域*/
.scrollView{
    width: 100%;

}
.scrollContent{
    width: 100%;
}
.scrollAddWrap{
    /*display: flex;*/
    /*justify-content: space-between;*/
    /*flex-wrap: wrap;*/
    padding: 0rpx 10rpx 60rpx 10rpx;


}
.card{
    width: 100%;
    height: 170rpx;
    background-color: white;
    display: flex;
    color: #B0B0B0;
    font-size: 12px;
    padding: 15rpx 20rpx;
    border-bottom: 1px solid #E0E0E0;
    align-items: center;

}
.imgWrap{
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
    border-radius: 50%;
}
.imgWrap image{
    width: 100%;
    height: 100%;

}
.cardRight{
    width: 77%;
    height: 77%;
    padding-left: 20rpx;
    line-height: 49rpx;

}
.cardTitle{
    font-size: 13px;
    color: black;
    font-weight: bold;
}
.overOmit{
    width: 138rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #ce4920;
    display: block;
    float: left;
    margin-right: 43rpx;
    font-weight: bold;

}
.cardBottom{
    display: flex;
    justify-content: space-between;
    width: 84%;

}
.cardBottom van-icon{
    color:#ce4920;
}